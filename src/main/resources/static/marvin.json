{
  "name": "event",
  "endpoint": "http://dev-pinkpony.cfapps.io/",
  "subCommands": [
    {
      "name": "create",
      "arguments": [
        {"name": "/(.+)\s+\|\s+"},
        {"description": "/(.+)\s+\|\s+"},
        {"venue": "/(.+)\s+\|\s+"},
        {"calendarEventDateTime": "TIMESTAMP"},
      ],
      "endpoint": "http://dev-pinkpony.cfapps.io/calendarEvents/",
      "method": "POST",
      "default_response_success": "Event created successfully",
      "default_response_failure": "Event create failed: EVERYTHING IS HORRIBLE!!!!"
    },
    {
      "name": "rsvp",
      "arguments": [
        {"calendarEvent": "/(https?.*?)\s/"},
        {"response": "/(yes|no)/"}
      ],
      "endpoint": "http://dev-pinkpony.cfapps.io/rsvps",
      "method": "POST",
      "default_response_success": "You have RSVP`d",
      "default_response_failure": "RSVP create failed: EVERYTHING IS HORRIBLE!!!!"
    }
  ]
}
