{
  "name": "event",
  "endpoint": "http://dev-pinkpony.cfapps.io/",
  "subCommands": [
    {
      "name": "create",
      "arguments": [
        {"name": "/(.+?)\\|/"},
        {"description": "/(.+?)\\|/"},
        {"venue": "/(.+?)\\|/"},
        {"calendarEventDateTime": "TIMESTAMP"}
      ],
      "endpoint": "http://dev-pinkpony.cfapps.io/calendarEvents/",
      "method": "POST",
      "defaultResponseSuccess": "Event created successfully",
      "defaultResponseFailure": "Event create failed: EVERYTHING IS HORRIBLE!!!!"
    },
    {
      "name": "rsvp",
      "arguments": [
        {"calendarEvent": "/(https?.*?)\\s/"},
        {"response": "/(yes|no)/"}
      ],
      "endpoint": "http://dev-pinkpony.cfapps.io/rsvps",
      "method": "POST",
      "defaultResponseSuccess": "You have RSVP`d",
      "defaultResponseFailure": "RSVP create failed: EVERYTHING IS HORRIBLE!!!!"
    },
    {
      "name": "cancel",
      "arguments": [
        {"id": "/(\\d+)/"}
      ],
      "endpoint": "http://dev-pinkpony.cfapps.io/calendarEvents/{id}/cancel",
      "method": "PATCH",
      "defaultResponseSuccess" : "The event `{name}` has been cancelled.",
      "defaultResponseFailure": "Could not cancel the event. =-("
    }
  ]
}
