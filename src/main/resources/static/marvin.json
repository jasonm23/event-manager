{
  "command": "event",
  "base_url": "http://host/calendarEvents",
  "subcommands": [
    {
      "name": "create",
      "arguments": [
        {"name": "/\\w+/"},
        {"ignore": "/(on|at)/"},
        {"calendarEventDateTime": "TIMESTAMP"},
        {"venue": "/\\w+/"}
      ],
      "endpoint": "/calendarEvents/",
      "method": "POST",
      "default_response_success": "Event created successfully",
      "default_response_failure": "EVERYTHING IS HORRIBLE!!!!"
    },
    {
      "name": "rsvp",
      "arguments": [
        {"event": "/https?.*/"},
        {"response": "/(yes|no)/"}
      ],
      "endpoint": "/rsvps",
      "method": "POST"
    },
    {
      "name": "cancel",
      "arguments": [
        {"calendar_event_id": "/\\d+/"}
      ],
      "endpoint": "/events/{calendar_event_id}/cancel",
      "method": "PATCH"
    }
  ]
}
